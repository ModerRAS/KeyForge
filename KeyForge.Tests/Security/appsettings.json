{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "SecuritySettings": {
    "TestMode": true,
    "EnableDetailedErrors": false,
    "SecurityHeaders": {
      "Enable": true,
      "XContentOptions": "nosniff",
      "XFrameOptions": "DENY",
      "XXSSProtection": "1; mode=block",
      "StrictTransportSecurity": "max-age=31536000; includeSubDomains",
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "ReferrerPolicy": "strict-origin-when-cross-origin"
    },
    "Authentication": {
      "JwtSecret": "your-secret-key-change-in-production",
      "JwtExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7,
      "RequireHttps": true,
      "MaxLoginAttempts": 5,
      "LockoutDurationMinutes": 15
    },
    "Authorization": {
      "DefaultPolicy": "RequireAuthenticatedUser",
      "AdminPolicy": "RequireAdminRole",
      "EnableRoleBasedAccess": true
    },
    "InputValidation": {
      "MaxInputLength": 1000,
      "AllowedFileTypes": [".jpg", ".png", ".gif", ".pdf", ".txt"],
      "MaxFileSizeMB": 10,
      "EnableXssProtection": true,
      "EnableSqlInjectionProtection": true
    },
    "RateLimiting": {
      "Enable": true,
      "MaxRequests": 100,
      "WindowSeconds": 60,
      "EnableByIp": true,
      "EnableByUser": true
    },
    "CORS": {
      "Enable": true,
      "AllowedOrigins": ["https://localhost:5001", "https://localhost:3000"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "DataProtection": {
      "EnableEncryption": true,
      "EncryptionAlgorithm": "AES-256",
      "KeyRotationDays": 90,
      "BackupEnabled": true,
      "BackupRetentionDays": 30
    },
    "Monitoring": {
      "EnableSecurityLogging": true,
      "LogSecurityEvents": true,
      "LogAuthenticationEvents": true,
      "LogAuthorizationEvents": true,
      "RetainLogsDays": 90
    }
  },
  "TestSettings": {
    "UseInMemoryDatabase": true,
    "DisableAuthenticationForTesting": false,
    "MockExternalServices": true,
    "EnableDetailedLogging": true,
    "TestData": {
      "TestUser": {
        "Email": "test@example.com",
        "Password": "TestPass123!",
        "Role": "User"
      },
      "TestAdmin": {
        "Email": "admin@example.com",
        "Password": "AdminPass123!",
        "Role": "Admin"
      }
    }
  }
}